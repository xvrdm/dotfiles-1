# See xmodmap
set $mod Mod4

# choose a FreeType font, such as:
font pango:Terminus, FontAwesome 8


new_window pixel 3
focus_follows_mouse  yes

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Back and Forth
workspace_auto_back_and_forth yes

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+p exec --no-startup-id j4-dmenu-desktop --term urxvt --display-binar --dmenu "dmenu -sb '#586e75' -sf '#eee8d5' -nb '#eee8d5' -nf '#586e75' -fn 'Terminus-10'"
